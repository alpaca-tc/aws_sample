[
  {
    "cpu": 300,
    "essential": true,
    "image": "${image_url}",
    "memory": 300,
    "name": "${container_name}",
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      }, {
        "name": "RAILS_MASTER_KEY",
        "value": "${rails_master_key}"
      }
    ],
    "portMappings": [
      {
        "protocol": "tcp",
        "hostPort": 0,
        "containerPort": 3000
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
          "awslogs-group": "${log_group_name}",
          "awslogs-region": "${log_group_region}"
      }
    }
  }
]
